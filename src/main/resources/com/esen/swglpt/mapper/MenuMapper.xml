<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.esen.swglpt.mapper.MenuMapper">
    <resultMap id="BaseResultMap" type="com.esen.swglpt.entity.Menu">
        <result column="MENU_ID" property="menuId" jdbcType="DECIMAL"/>
        <result column="MENU_TYPE" property="menuType" jdbcType="VARCHAR"/>
        <result column="MENU_NAME" property="menuName" jdbcType="VARCHAR"/>
        <result column="MENU_TAG" property="menuTag" jdbcType="VARCHAR"/>
        <result column="MENU_URL" property="menuUrl" jdbcType="VARCHAR"/>
        <result column="MENU_DISABLED" property="menuDisabled" jdbcType="CHAR"/>
        <result column="MENU_ORDER" property="menuOrder" jdbcType="DECIMAL"/>
        <result column="MENU_DESCRIPTION" property="menuDescription" jdbcType="VARCHAR"/>
        <result column="IS_MENU" property="isMenu" jdbcType="CHAR"/>
        <result column="PERMS" property="perms" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        MENU_ID, MENU_TYPE, MENU_NAME, MENU_TAG, MENU_URL, MENU_URL, MENU_DISABLED, MENU_ORDER, MENU_DESCRIPTION, IS_MENU, PERMS
    </sql>

    <select id="selectMenuByRoleId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_menu
    </select>
    <select id="selctAllList" resultType="com.esen.swglpt.entity.Menu">
       select m.menu_Id,
               m.menu_Type,
               m.menu_Name,
               m.menu_Tag,
               m.menu_Url,
               m.menu_Disabled,
               m.menu_Order,
               m.menu_Description,
               m.perms,
               m.is_Menu
          from t_menu m
          left join t_role_menu rm
            on m.menu_id = rm.menu_id
          left join t_role r
            on rm.role_id = r.role_id
    </select>

    <insert id="insert" parameterType="com.esen.swglpt.entity.Menu">
    insert into T_MENU (MENU_ID, MENU_TYPE, MENU_NAME, 
      MENU_TAG, MENU_URL, MENU_DISABLED,
      MENU_ORDER, MENU_DESCRIPTION, IS_MENU,
      PERMS
      )
    values (#{menuId,jdbcType=DECIMAL}, #{menuType,jdbcType=VARCHAR}, #{menuName,jdbcType=VARCHAR}, 
      #{menuTag,jdbcType=VARCHAR}, #{menuUrl,jdbcType=VARCHAR}, #{menuDisabled,jdbcType=CHAR}, 
      #{menuOrder,jdbcType=DECIMAL}, #{menuDescription,jdbcType=VARCHAR}, #{isMenu,jdbcType=CHAR}
      #{perms,jdbcType=VARCHAR},
      )
  </insert>
    <insert id="insertSelective" parameterType="com.esen.swglpt.entity.Menu">
        insert into T_MENU
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="menuId != null">
                MENU_ID,
            </if>
